<%= form_for(@person, html: { class: "form-horizontal" }) do |f| %>

  <% if @person.errors.any? %>
    <div id="error_explanation" class="alert alert-danger col-sm-10 col-sm-offset-2">
      <h4><%= pluralize(@person.errors.count, "error") %> prohibited this person from being saved:</h2>

      <ul>
      <% @person.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :first_name, class:"col-sm-2 control-label" %>
  <div class= "col-sm-6">  <%= f.text_field :first_name , class:"form-control" %> </div>
  </div>
  <div class="field form-group">
    <%= f.label :last_name, class:"col-sm-2 control-label" %>
    <div class= "col-sm-6">  <%= f.text_field :last_name, class:"form-control"  %></div>
  </div>
  <div class="field form-group">
    <%= f.label :date_of_birth, class:"col-sm-2 control-label" %><br>
    <div class= "col-sm-6">  <%= f.date_field :date_of_birth, class:"form-control"  %></div>
  </div>
  <div class="field form-group">
    <%= f.label :bio, class:"col-sm-2 control-label" %><br>
    <div class= "col-sm-6">  <%= f.text_area :bio , class:"form-control" %></div>
  </div>
  <div class="field form-group">
    <div class= "col-sm-6 col-sm-offset-2">
        <%= f.check_box :active %>
        <%= f.label :active, class:"control-label" %>
    </div>

  </div>

  <div class="actions form-group">
    <div class= "col-sm-6 col-sm-offset-2">
        <%= f.submit class: "btn btn-primary" %>

      <%= link_to 'Cancel', people_path, class: "btn btn-default" %>
    </div>
  </div>

<% end %>
